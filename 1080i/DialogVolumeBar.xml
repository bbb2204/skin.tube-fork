<?xml version="1.0" encoding="UTF-8"?>
<window id="2005">

    <controls>

        <control type="group">
            <include>DrawerPushAnimation</include>
            
            <animation type="WindowOpen">
                <effect type="Fade" start="0" end="100" time="300" tween="cubic"/>
                <effect type="Slide" start="-500,0" end="0,0" time="300" center="auto" tween="back"/>
            </animation>
            <animation type="WindowClose">
                <effect type="Fade" start="100" end="0" time="150" tween="cubic" easing="in"/>
                <effect type="Slide" start="0,0" end="-500,0" time="150" center="auto" tween="cubic" easing="in"/>
            </animation>

            <control type="grouplist">
                <top>91</top>
                <right>98</right>

                <align>right</align>
                <orientation>horizontal</orientation>
                <usecontrolcoords>true</usecontrolcoords>

                <!-- Title -->
                <control type="progress" id="1">
                    <width>300</width>
                    <top>18</top>
                    <height>5</height>
                    <visible>true</visible>
                    <texturebg colordiffuse="Secondary">solid.png</texturebg>
                    <midtexture colordiffuse="Primary">solid.png</midtexture>
                    <info>Player.Volume</info>
                </control>
                <!-- Title -->
                <control type="image">
                    <top>5</top>
                    <width>32</width>
                    <height>32</height>
                    <texture colordiffuse="Primary">icon-audio.png</texture>
                </control>

            </control>
        </control>

    </controls>

</window>